<% layout('layouts/boilerplate') %>

    <!-- Background Layer -->
    <div class="page-bg" style="background-image: url('<%= listing.image.url %>');"></div>

    <div class="page-container">

        <div class="trip-header">
            <span class="trip-status">Verification Complete</span>
            <h1 class="trip-title">Ready for Takeoff</h1>
            <p class="trip-subtitle">
                <%= listing.title %> &bull; <%= listing.location %>, <%= listing.country %>
            </p>
        </div>

        <div class="tickets-container">
            <% passengers.forEach((passenger, index)=> { %>
                <div class="boarding-pass" style="animation-delay: <%= index * 0.1 %>s">
                    <div class="ticket-header">
                        <span class="airline-code">GUEST PASS</span>
                        <span class="ticket-class">VERIFIED</span>
                    </div>

                    <div class="ticket-body">
                        <div class="passenger-name">
                            <i class="fa-solid fa-user"
                                style="color: #D4AF37; margin-right: 10px; font-size: 0.8em;"></i>
                            <%= passenger.name %>
                        </div>

                        <div class="flight-info-row">
                            <div class="info-group">
                                <label>Passenger Ref</label>
                                <span>#0<%= index + 1 %></span>
                            </div>
                            <div class="info-group">
                                <label>Age</label>
                                <span>
                                    <%= passenger.age %>
                                </span>
                            </div>
                            <div class="info-group">
                                <label>Gender</label>
                                <span>
                                    <%= passenger.gender %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <div class="actions-container">
            <form action="/listings/<%= listing._id %>/book/pay" method="get">
                <button class="btn-pay" type="submit">
                    Confirm & Pay &#8377;<%= listing.price.toLocaleString("IN") %>
                </button>
            </form>
        </div>

    </div>