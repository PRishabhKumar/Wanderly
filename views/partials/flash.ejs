<% if(success && success.length){ %>
    <div class="custom-alert custom-success">
        <%= success %>
            <button type="button" class="custom-close" onclick="this.parentElement.style.display='none';">
                &times;
            </button>
    </div>
    <% } %>

        <% if(failure && failure.length){ %>
            <div class="custom-alert custom-failure">
                <%= failure %>
                    <button type="button" class="custom-close" onclick="this.parentElement.style.display='none';">
                        &times;
                    </button>
            </div>
            <% } %>