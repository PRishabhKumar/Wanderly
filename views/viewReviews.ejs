<% layout('layouts/boilerplate') %>
    <div class="reviews-page-wrapper">
        <!-- Hero Section -->
        <div class="overlayContainer"></div>
        <div class="reviews-hero">
            <div class="hero-content">
                <h1 class="listing-title">
                    <%= listing.title %>
                </h1>
                <div class="hero-meta">
                    <span class="location"><i class="fa-solid fa-location-dot"></i>
                        <%= listing.location %>, <%= listing.country %>
                    </span>
                    <span class="rating-badge">
                        <i class="fa-solid fa-star"></i>
                        <span>
                            <%= isNaN(averageRating) ? 0 : averageRating %>
                        </span> <!-- Placeholder for dynamic rating if not available provided -->
                    </span>
                </div>
                <a href="/listings/<%= listing._id %>" class="back-link">
                    <i class="fa-solid fa-arrow-left"></i> Back to Listing
                </a>
            </div>
            <div class="hero-image-container">
                <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="hero-image">
                <div class="hero-overlay"></div>
            </div>
        </div>

        <!-- Reviews Grid -->
        <div class="reviews-container">
            <% if(reviews && reviews.length> 0){ %>
                <div class="reviews-grid">
                    <% reviews.forEach((review)=> { %>
                        <div class="review-card">
                            <div class="review-header">
                                <div class="header-top">
                                    <div class="reviewer-info">
                                        <div class="avatar">
                                            <%= review.owner.username.charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="meta">
                                            <span class="username">
                                                <%= review.owner.username %>
                                            </span>
                                            <span class="date">
                                                <%= new Date(review.createdAt).toLocaleDateString('en-US', {
                                                    month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="review-actions-top">
                                        <a href="/listings/<%= listing._id %>/reviews/<%= review._id %>"
                                            class="action-btn-pills view" title="View Review">
                                            <i class="fa-solid fa-eye"></i> <span>View</span>
                                        </a>
                                        <% if(currentUser && currentUser._id.toString()===review.owner._id.toString()) {
                                            %>
                                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>/edit"
                                                method="GET">
                                                <button class="action-btn-pills edit" title="Edit Review">
                                                    <i class="fa-solid fa-pen"></i> <span>Edit</span>
                                                </button>
                                            </form>
                                            <form
                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                method="POST">
                                                <button class="action-btn-pills delete" title="Delete Review">
                                                    <i class="fa-solid fa-trash"></i> <span>Delete</span>
                                                </button>
                                            </form>
                                            <% } %>
                                    </div>
                                </div>
                                <div class="review-rating">
                                    <% for(let i=1; i <=5; i++) { %>
                                        <i class="fa-solid fa-star <%= i <= review.rating ? 'filled' : 'empty' %>"></i>
                                        <% } %>
                                </div>
                            </div>

                            <div class="review-content">
                                <p>
                                    <%= review.content %>
                                </p>
                            </div>


                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fa-regular fa-comment-dots"></i>
                        <h3>No Reviews Yet</h3>
                        <p>Be the first to share your experience at this property!</p>
                        <form action="/listings/<%= listing._id %>/reviews/new" method="get">
                            <button class="cta-button">Write a Review</button>
                        </form>
                    </div>
                    <% } %>
        </div>

        <% if(reviews && reviews.length> 0) { %>
            <div class="add-review-fab-container">
                <form action="/listings/<%= listing._id %>/reviews/new" method="get">
                    <button class="fab-button" title="Add a Review">
                        <i class="fa-solid fa-plus"></i> <span class="fab-text">Write a Review</span>
                    </button>
                </form>
            </div>
            <% } %>
    </div>
    <script src="/js/viewReviews.js"></script>  